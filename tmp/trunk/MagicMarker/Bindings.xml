<Bindings>
	<Binding name="MAGICMARKTOGGLE" header="MagicMarker">
                local aceconf = LibStub("AceConfigDialog-3.0")
                if aceconf.OpenFrames["Magic Marker"] then
                  aceconf:Close("Magic Marker")
                else
                  aceconf:Open("Magic Marker")
                end
	</Binding>
	<Binding name="MAGICMARKRESET" header="MagicMarker">
		LibStub("AceAddon-3.0"):GetAddon("MagicMarker"):ResetMarkData()
	</Binding>
	<Binding name="MAGICMARKMARK" header="MagicMarker">
		LibStub("AceAddon-3.0"):GetAddon("MagicMarker"):MarkSingle()
	</Binding>
	<Binding name="MAGICMARKUNMARK" header="MagicMarker">
		LibStub("AceAddon-3.0"):GetAddon("MagicMarker"):UnmarkSingle()
	</Binding>
</Bindings>
